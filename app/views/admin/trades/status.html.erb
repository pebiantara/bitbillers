<div class="popup-content">
	<div class="popup-body">
		<%= form_for @trade, url: change_status_admin_trade_path(@trade), method: :patch, remote: true do |f| %>
		<div class="form-group">
			<%= f.label :status %>
			<%= f.select :status, options_for_select(Trade.states.map{|x,v| [v, x]}, selected: f.object.status), {}, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.submit "Change", class: 'btn btn-primary', data: {disable_with: 'Changin...'} %>
		</div>
		<% end %>
	</div>
</div>