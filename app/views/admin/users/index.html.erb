<h1>Users</h1>
<%= link_to "javascript:void(0)", class: 'btn btn-primary', onclick: "openModal('#{new_admin_user_path(popup: true)}')" do %>
  <i class="fa fa-plus"></i> Add new user
<% end %>
<hr/>
<ul class="nav nav-tabs">
	<li role="presentation" class="<%= 'active' if !params[:status].present? %>">
		<a href="/admin/users">All (<%= User.members_count %>)</a>
	</li>
	<li role="" class="<%= 'active' if params[:status].eql?('confirmed') %>"><a href="/admin/users?status=confirmed">Confirmed (<%= User.confirmed_count %>)</a></li>
	<li role="" class="<%= 'active' if params[:status].eql?('unconfirmed') %>"><a href="/admin/users?status=unconfirmed">Unconfirmed (<%= User.unconfirmed_count %>)</a></li>
	<li role="" class="<%= 'active' if params[:status].eql?('locked') %>"><a href="/admin/users?status=locked">Locked (<%= User.locked_count %>)</a></li>
</ul>
<div class="table-responsive">
	<table class='table' id='user-table'>
		<thead>
			<tr>
				<th>ID</th>
				<th>Date</th>
				<th>IP</th>
				<th>IP-Location</th>
				<th>email</th>
				<th>phone number</th>
				<th>SMS verified</th>
				<th>ID verified</th>
				<th>Total Purchases</th>
				<th>Trade List</th>
				<th>Login History</th>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Address</th>
				<th>Status</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<%- @users.each do |user| %>
        <tr id="user-<%= user.id %>">
          <%= render partial: "row", locals: {user: user} %>
        </tr>
			<% end %>
			<tr>
        <td colspan="16">
          <%= paginate @users %>
        </td>
			</tr>
		</tbody>
	</table>
</div>