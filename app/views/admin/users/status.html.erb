<div class="popup-content">
	<div class="popup-body">
		<%= form_for @user, url: change_status_admin_user_path(@user), method: :patch, remote: true do |f| %>
		<div class="form-group">
			<%= f.label :status %>
			<%= f.select :status, options_for_select(User.status_arr, selected: f.object.status), {}, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.submit "Change", class: 'btn btn-primary', data: {disable_with: 'Changin...'} %>
		</div>
		<% end %>
	</div>
</div>